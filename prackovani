  <script>
    // ----------------------------
    // Theme (dark/light)
    // ----------------------------
    const themeCheckbox = document.getElementById("themeCheckbox");
    const themeLabel = document.getElementById("themeLabel");

    function applyTheme(theme){
      document.body.setAttribute("data-theme", theme);
      const isLight = theme === "light";
      themeCheckbox.checked = isLight;
      themeLabel.textContent = isLight ? "‚òÄÔ∏è Light mode" : "üåô Dark mode";
      localStorage.setItem("theme", theme);
    }

    const savedTheme = localStorage.getItem("theme") || "dark";
    applyTheme(savedTheme);

    themeCheckbox.addEventListener("change", () => {
      applyTheme(themeCheckbox.checked ? "light" : "dark");
    });

    // ----------------------------
    // Parsing helpers
    // ----------------------------
    function splitLines(text){
      return text
        .replace(/\r\n/g, "\n")
        .replace(/\r/g, "\n")
        .split("\n")
        .map(l => l.trim())
        .filter(l => l.length > 0);
    }

    function detectDelimiter(line){
      // Prefer tabs (Excel paste), then semicolon, then comma
      if (line.includes("\t")) return "\t";
      if (line.includes(";")) return ";";
      if (line.includes(",")) return ",";
      // fallback: multiple spaces
      return null;
    }

    function smartSplit(line, delim){
      if (delim) return line.split(delim).map(s => s.trim());
      // split by 2+ spaces if no delimiter
      return line.split(/\s{2,}/).map(s => s.trim());
    }

    function normalizeHeader(h){
      return h
        .toLowerCase()
        .normalize("NFD").replace(/[\u0300-\u036f]/g, "") // remove diacritics
        .replace(/\s+/g, "")
        .replace(/_/g,"");
    }

    // Parse "CISLA SVARU" like:
    // - "24-26" => 24,25,26
    // - "24,25,26" or "24; 25; 26" or "24 25 26"
    // - "24-26, 30, 33-34"
    function parseWeldNumbers(text){
      const raw = (text || "").trim();
      if (!raw) return { numbers: [], problems: ["Chyb√≠ ƒç√≠sla svaru."] };

      // unify separators
      const cleaned = raw
        .replace(/‚Äì|‚Äî/g, "-")
        .replace(/,/g, " ")
        .replace(/;/g, " ")
        .replace(/\s+/g, " ")
        .trim();

      const parts = cleaned.split(" ").filter(Boolean);
      const nums = [];
      const problems = [];

      for (const p of parts){
        if (/^\d+$/.test(p)){
          nums.push(parseInt(p, 10));
          continue;
        }
        if (/^\d+-\d+$/.test(p)){
          const [a,b] = p.split("-").map(x => parseInt(x,10));
          if (Number.isNaN(a) || Number.isNaN(b)){
            problems.push(`Neƒçiteln√Ω rozsah: ${p}`);
            continue;
          }
          if (b < a){
            problems.push(`Rozsah je obr√°cenƒõ (b < a): ${p}`);
            continue;
          }
          for (let x=a; x<=b; x++) nums.push(x);
          continue;
        }
        problems.push(`Nezn√°m√Ω form√°t: "${p}"`);
      }

      // remove duplicates + sort
      const uniq = Array.from(new Set(nums)).sort((a,b)=>a-b);
      if (uniq.length === 0 && problems.length === 0){
        problems.push("ƒå√≠sla svaru se nepoda≈ôilo p≈ôeƒç√≠st.");
      }

      return { numbers: uniq, problems };
    }

    function toInt(val){
      if (val === null || val === undefined) return null;
      const s = String(val).trim().replace(",", ".");
      if (!s) return null;
      const n = Number(s);
      return Number.isFinite(n) ? n : null;
    }

    // ----------------------------
    // Core parse + validate
    // ----------------------------
    const dataInput = document.getElementById("dataInput");
    const parseBtn = document.getElementById("parseBtn");
    const loadDemoBtn = document.getElementById("loadDemoBtn");
    const clearBtn = document.getElementById("clearBtn");
    const onlyErrorsCheckbox = document.getElementById("onlyErrorsCheckbox");
    const tbody = document.getElementById("tbody");

    const sRows = document.getElementById("sRows");
    const sDays = document.getElementById("sDays");
    const sBad = document.getElementById("sBad");
    const sWarn = document.getElementById("sWarn");
    const sOk = document.getElementById("sOk");

    let lastRows = []; // parsed rows with validation

    function render(){
      const onlyErr = onlyErrorsCheckbox.checked;

      const rows = onlyErr
        ? lastRows.filter(r => r.status !== "OK")
        : lastRows;

      tbody.innerHTML = "";

      if (rows.length === 0){
        tbody.innerHTML = `
          <tr>
            <td class="muted" colspan="9" style="padding:16px;">
              ${lastRows.length === 0 ? "≈Ω√°dn√° data." : "Filtr nic nena≈°el (≈æ√°dn√© chyby/varov√°n√≠)."}
            </td>
          </tr>`;
        return;
      }

      for (const r of rows){
        const tr = document.createElement("tr");
        if (r.status === "CHYBA") tr.classList.add("rowBad");
        if (r.status === "VAROV√ÅN√ç") tr.classList.add("rowWarn");

        const badgeClass = r.status === "OK" ? "good" : (r.status === "CHYBA" ? "bad" : "warn");
        const errHtml = r.issues.length
          ? `<ul>${r.issues.map(x => `<li>${escapeHtml(x)}</li>`).join("")}</ul>`
          : `<span class="muted">‚Äî</span>`;

        tr.innerHTML = `
          <td class="mono">${escapeHtml(r.datum || "")}</td>
          <td>${escapeHtml(r.size || "")}</td>
          <td>${escapeHtml(r.sarze || "")}</td>
          <td>${escapeHtml(r.vzorek || "")}</td>
          <td class="mono">${escapeHtml(r.cislaSvaru || "")}</td>
          <td class="mono">${escapeHtml(r.pocetSvaru || "")}</td>
          <td>${escapeHtml(r.izo || "")}</td>
          <td><span class="badge ${badgeClass}">${escapeHtml(r.status)}</span></td>
          <td class="errors">${errHtml}</td>
        `;
        tbody.appendChild(tr);
      }
    }

    function updateStats(){
      const total = lastRows.length;
      const bad = lastRows.filter(r => r.status === "CHYBA").length;
      const warn = lastRows.filter(r => r.status === "VAROV√ÅN√ç").length;
      const ok = lastRows.filter(r => r.status === "OK").length;
      const days = new Set(lastRows.map(r => r.datum).filter(Boolean)).size;

      sRows.textContent = total;
      sDays.textContent = days;
      sBad.textContent = bad;
      sWarn.textContent = warn;
      sOk.textContent = ok;
    }

    function parseAll(){
      const text = dataInput.value || "";
      const lines = splitLines(text);

      if (lines.length === 0){
        lastRows = [];
        updateStats();
        render();
        return;
      }

      // header
      const headerLine = lines[0];
      const delim = detectDelimiter(headerLine);
      const headers = smartSplit(headerLine, delim).map(normalizeHeader);

      // map expected fields (supports variations)
      const idx = {
        datum: headers.findIndex(h => h === "datum" || h === "date"),
        size: headers.findIndex(h => h === "size"),
        sarze: headers.findIndex(h => h === "sarze" || h === "sarze." || h === "sar"),
        vzorek: headers.findIndex(h => h === "vzorek" || h === "sample"),
        cislaSvaru: headers.findIndex(h => h === "cislasvaru" || h === "cislasvaru" || h === "weldnumbers" || h === "cislasvaru"),
        pocetSvaru: headers.findIndex(h => h === "pocetsvaru" || h === "pocetsvaru" || h === "countwelds"),
        izo: headers.findIndex(h => h === "izo"),
      };

      // If first line doesn't look like header (no known cols), treat as data with fixed order
      const knownCount = Object.values(idx).filter(i => i >= 0).length;
      const hasHeader = knownCount >= 2;

      const start = hasHeader ? 1 : 0;

      const rows = [];
      for (let i=start; i<lines.length; i++){
        const cols = smartSplit(lines[i], delim);
        const get = (key, fallbackIndex) => {
          const j = hasHeader ? idx[key] : fallbackIndex;
          if (j === null || j === undefined || j < 0) return "";
          return (cols[j] ?? "").trim();
        };

        const datum = get("datum", 0);
        const size = get("size", 1);
        const sarze = get("sarze", 2);
        const vzorek = get("vzorek", 3);
        const cislaSvaru = get("cislaSvaru", 4);
        const pocetSvaru = get("pocetSvaru", 5);
        const izo = get("izo", 6);

        const issues = [];

        if (!datum) issues.push("Chyb√≠ DATUM.");
        if (!cislaSvaru) issues.push("Chyb√≠ CISLA SVARU.");

        // parse weld numbers
        const parsed = parseWeldNumbers(cislaSvaru);
        for (const p of parsed.problems) issues.push(p);

        // compare count
        const expectedCount = parsed.numbers.length;
        const countVal = toInt(pocetSvaru);

        if (pocetSvaru && (countVal === null || !Number.isInteger(countVal))){
          issues.push(`POCETSVARU nen√≠ cel√© ƒç√≠slo: "${pocetSvaru}"`);
        }
        if (countVal !== null && expectedCount > 0 && countVal !== expectedCount){
          issues.push(`Nesed√≠ poƒçet: POCETSVARU=${countVal}, ale z CISLA SVARU vych√°z√≠ ${expectedCount}.`);
        }

        // classify
        let status = "OK";
        const hasHardError =
          issues.some(x => x.startsWith("Chyb√≠")) ||
          issues.some(x => x.includes("nepoda≈ôilo")) ||
          issues.some(x => x.includes("Nezn√°m√Ω form√°t")) ||
          issues.some(x => x.includes("Nesed√≠ poƒçet")) ||
          issues.some(x => x.includes("obr√°cenƒõ"));

        const hasSoftWarn =
          !hasHardError && issues.length > 0;

        if (hasHardError) status = "CHYBA";
        else if (hasSoftWarn) status = "VAROV√ÅN√ç";

        rows.push({
          datum, size, sarze, vzorek, cislaSvaru, pocetSvaru, izo,
          status,
          issues
        });
      }

      lastRows = rows;
      updateStats();
      render();
    }

    function escapeHtml(s){
      return String(s)
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    // ----------------------------
    // UI events
    // ----------------------------
    parseBtn.addEventListener("click", parseAll);
    onlyErrorsCheckbox.addEventListener("change", render);

    clearBtn.addEventListener("click", () => {
      dataInput.value = "";
      lastRows = [];
      updateStats();
      render();
    });

    loadDemoBtn.addEventListener("click", () => {
      dataInput.value =
`DATUM\tSIZE\tSARZE\tVZOREK\tCISLA SVARU\tPOCETSVARU\tIZO
23.07.2025\t1,5\t41164\t4\t24-26\t3\tG-B432:FA100 RL504 B3
23.07.2025\t3\t41164\t4\t10-12\t2\tG-B432:FA100 RL504 B3
24.07.2025\t2\t\t4\t30,31,32\t3\tG-B999:FA200 RL111 A1
\t2\t50000\t1\t40-42\t3\tG-X111:FA300 RL222 C2
25.07.2025\t1\t50001\t2\t60-58\t3\tG-X222:FA300 RL222 C2`;
